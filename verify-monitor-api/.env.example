# Environment Configuration Example
# Copy this file to .env and modify the values as needed

# Server Configuration
NODE_ENV=production
PORT=3001
HOST=localhost

# Database Configuration (Required)
DATABASE_URL="postgresql://argos:argos123@localhost:5432/sla_monitor"
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=10000
DB_QUERY_TIMEOUT=5000
DB_SLOW_QUERY_THRESHOLD=100
DB_ENABLE_METRICS=true

# JWT Configuration (Required - Generate a strong secret in production)
JWT_SECRET="c79b570f39b17d75e7f23f220f594fb3909765d405e6560e614f45bd8d80a7ec5f2a4f4e37fc0cbe4afe32475a0277e9a4377ede9bccce37fc7d73fea7c42e63"
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Socket.IO Configuration
SOCKET_CORS_ORIGINS=
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14
LOG_DATE_PATTERN=YYYY-MM-DD


# Application Settings
API_KEY="wQm8Kx2pL9vN5rT7yH3jF6bD4sG1zA0c"
API_PREFIX=/api
API_VERSION=v1
SWAGGER_ENABLED=false

# Performance Settings
REQUEST_SIZE_LIMIT=10mb
URL_ENCODED_LIMIT=10mb
JSON_LIMIT=10mb
COMPRESSION_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Watch Server Configuration
WATCH_SERVER_ENABLED=false
WATCH_SERVER_PORT=3002
WATCH_SERVER_INTERVAL=60000

# Incident Management
INCIDENT_AUTO_RESOLVE_HOURS=24
INCIDENT_ESCALATION_MINUTES=30

# SLA Configuration
SLA_CALCULATION_INTERVAL_MINUTES=5
SLA_RETENTION_DAYS=365

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123!
SETUP_MODE=false