{
  "name": "verify-monitor-api",
  "version": "1.0.0",
  "description": "SLA monitoring system backend API with real-time collaboration",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:contract": "jest tests/contract",
    "test:integration": "jest tests/integration",
    "test:unit": "jest tests/unit",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "ts-node prisma/seeds/index.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "db:reset-data": "ts-node prisma/reset-data.ts",
    "db:reset-data-skip": "ts-node prisma/reset-data.ts --skip-confirmation",
    "db:reset-data-no-reseed": "ts-node prisma/reset-data.ts --no-reseed",
    "db:reset-all-data": "ts-node prisma/reset-data.ts --include-users"
  },
  "keywords": [
    "sla",
    "monitoring",
    "realtime",
    "api",
    "typescript",
    "express"
  ],
  "author": "SLA Monitor Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.7.0",
    "socket.io": "^4.7.5",
    "winston": "^3.13.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.14.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "prisma": "^5.15.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "prisma": {
    "seed": "ts-node prisma/seeds/index.ts"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
