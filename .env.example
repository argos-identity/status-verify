# SLA Monitor System Environment Variables
# Copy this file to .env and customize for your environment

# Database Configuration
DB_USER=slamonitor
DB_PASSWORD=dev_password_123
DB_PORT=5432
DATABASE_URL=postgresql://slamonitor:dev_password_123@postgres:5432/sla_monitor

# JWT Configuration
JWT_SECRET=dev_jwt_secret_key_change_in_production_very_long_secret_key
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3003,http://localhost:3006

# API URLs
API_URL=http://verify-monitor-api:3003
WS_URL=ws://verify-monitor-api:3003

# Port Configuration
API_PORT=3003
MAIN_PORT=3000
INCIDENTS_PORT=3006
WATCH_PORT=3008

# Seeding
SEED_DATABASE=true

# Development/Production mode
NODE_ENV=development

# Watch Server Configuration
WATCH_MODE=continuous
MONITORING_INTERVAL=60000
HEALTH_CHECK_TIMEOUT=30000
MAX_RETRY_ATTEMPTS=3
LOG_LEVEL=info
LOG_FILE=logs/watch-server.log

# Service Endpoints to Monitor (comma-separated)
SERVICE_ENDPOINTS=https://api1.example.com/health,https://api2.example.com/health

# Watch Server Advanced Settings
WATCH_CRON_EXPRESSION=
ALERT_WEBHOOK_URL=
NOTIFICATION_ENABLED=false
PERFORMANCE_THRESHOLD_MS=5000
ERROR_THRESHOLD_COUNT=5